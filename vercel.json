{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/main.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "backend/src/**",
          "backend/requirements.txt"
        ],
        "excludeFiles": [
          "backend/node_modules/**",
          "backend/dist/**",
          "backend/.pytest_cache/**",
          "backend/.venv/**",
          "backend/venv/**",
          "backend/venv_bak/**",
          "**/__pycache__/**",
          "**/*.pyc",
          "**/*.pyo",
          "**/.*",
          "**/tests/**",
          "**/test_*.py",
          "**/*_test.py",
          "**/.git/**",
          "**/.github/**",
          "**/.vscode/**",
          "**/docs/**",
          "**/*.md",
          "**/*.log",
          "node_modules/**",
          ".next/**",
          ".vercel/**",
          "package-lock.json",
          "yarn.lock",
          "**/.env.local",
          "**/.env.production",
          "**/.env.development"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/src/main.py"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}